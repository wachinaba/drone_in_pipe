<launch>
  <!-- gazebo configs -->
  <arg name="gui" default="true" />
  <arg name="debug" default="false" />
  <arg name="verbose" default="false" />
  <arg name="paused" default="false" />
  <arg name="respawn_gazebo" default="false" />
  <arg name="world" default="$(find gazebo_pipe_worlds)/worlds/optical_flow_test_ground.world" />

  <!-- Gazebo sim -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world)" />
    <arg name="debug" value="$(arg debug)" />
    <arg name="verbose" value="$(arg verbose)" />
    <arg name="paused" value="$(arg paused)" />
    <arg name="respawn_gazebo" value="$(arg respawn_gazebo)" />
    <arg name="extra_gazebo_args" value="--lockstep" />
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <rosparam file="$(find px4_gazebo_sim)/config/optical_flow_tester_controllers.yaml" command="load" />

  <param name="robot_description"
    command="$(find xacro)/xacro --inorder $(find px4_gazebo_sim)/urdf/optical_flow_tester.urdf" />

  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
    args="-sdf -file $(find px4_gazebo_sim)/models/optical_flow_tester/model.sdf -model optical_flow_tester -x 0 -y 0 -z 0.5 -R 0 -P 0 -Y 0" />
  <!-- load the controllers -->

  <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen"
    ns="/optical_flow_tester"
    args="linear_joint_controller" />
</launch>